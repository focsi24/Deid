    <script>
        // Add sparkle effects randomly
        function createSparkle() {
            const container = document.querySelector('.container');
            const sparkle = document.createElement('div');
            sparkle.className = 'sparkle';
            sparkle.style.left = Math.random() * 100 + '%';
            sparkle.style.top = Math.random() * 100 + '%';
            sparkle.style.animationDelay = Math.random() * 2 + 's';
            container.appendChild(sparkle);
            
            setTimeout(() => sparkle.remove(), 3000);
        }

        setInterval(createSparkle, 800);

        // Add extra interactivity
        document.querySelectorAll('.link-button').forEach(button => {
            button.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px) scale(1.03)';
            });
            
            button.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === '1') {
                window.location.replace('https://www.youtube.com/@ostocer');
            } else if (e.key === '2') {
                window.location.replace('https://www.instagram.com/n1k1tos.as?igsh=Z3VjY2d1MWprZm56');
            } else if (e.key === '3') {
                window.location.replace('https://t.me/berlogarozdumiv');
            }
        });
    </script>
